<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
           id="org.apache.cordova.plugin.4visiontech"
      version="0.1.0">
    <name>4VisionTech</name>
    <description>Cordova RTSP viewing Plugin</description>
    <license>MIT</license>
    <keywords>cordova,phonegap,rtsp,streaming</keywords>

    <engines>
      <engine name="cordova" version=">=3.0.0" />
    </engines>    

    <js-module src="www/plugin.js" name="Plugin">
        <clobbers target="window.calendar" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Plugin">
                <param name="android-package" value="org.apache.cordova.plugin.4visiontech.Plugin"/>
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.CALENDAR" />
        </config-file>

        <source-file src="src/android/Plugin.java" target-dir="src/org/apache/cordova/plugin/4visiontech" />
    </platform>

